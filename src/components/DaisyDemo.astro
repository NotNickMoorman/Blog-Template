---
import "../styles/global.css";
---

<section class="card-container">

  <!-- 1. Buttons -->
  <div class="card">
    <h2>Buttons</h2>
    <div class="button-row">
      <button class="btn btn-primary">Primary</button>
      <button class="btn btn-secondary">Secondary</button>
      <button class="btn btn-accent">Accent</button>
      <button class="btn btn-outline">Outline</button>
      <button class="btn btn-ghost">Ghost</button>
    </div>
    <pre>
&lt;button class="btn btn-primary"&gt;Primary&lt;/button&gt;
&lt;button class="btn btn-secondary"&gt;Secondary&lt;/button&gt;
&lt;button class="btn btn-accent"&gt;Accent&lt;/button&gt;
&lt;button class="btn btn-outline"&gt;Outline&lt;/button&gt;
&lt;button class="btn btn-ghost"&gt;Ghost&lt;/button&gt;
    </pre>
  </div>

  <!-- 2. Alerts -->
  <div class="card">
    <h2>Alerts</h2>
    <div class="alert-column">
      <div class="alert alert-success">Success Alert</div>
      <div class="alert alert-warning">Warning Alert</div>
      <div class="alert alert-error">Error Alert</div>
      <div class="alert alert-info">Info Alert</div>
    </div>
    <pre>
&lt;div class="alert alert-success"&gt;Success Alert&lt;/div&gt;
&lt;div class="alert alert-warning"&gt;Warning Alert&lt;/div&gt;
&lt;div class="alert alert-error"&gt;Error Alert&lt;/div&gt;
&lt;div class="alert alert-info"&gt;Info Alert&lt;/div&gt;
    </pre>
  </div>

  <!-- 3. Badges -->
  <div class="card">
    <h2>Badges</h2>
    <div class="badge-row">
      <span class="badge">Default</span>
      <span class="badge badge-primary">Primary</span>
      <span class="badge badge-secondary">Secondary</span>
      <span class="badge badge-accent">Accent</span>
    </div>
    <pre>
&lt;span class="badge"&gt;Default&lt;/span&gt;
&lt;span class="badge badge-primary"&gt;Primary&lt;/span&gt;
&lt;span class="badge badge-secondary"&gt;Secondary&lt;/span&gt;
&lt;span class="badge badge-accent"&gt;Accent&lt;/span&gt;
    </pre>
  </div>

  <!-- 4. Cards -->
  <div class="card">
    <h2>Cards</h2>
    <div class="card-grid">
      <div class="card-inner">
        <div class="card-body">
          <h3 class="card-title">Card Title</h3>
          <p>Card content goes here.</p>
          <div class="card-actions">
            <button class="btn btn-primary btn-sm">Action</button>
          </div>
        </div>
      </div>
      <div class="card-inner">
        <div class="card-body">
          <h3 class="card-title">Another Card</h3>
          <p>More content here.</p>
          <div class="card-actions">
            <button class="btn btn-secondary btn-sm">Action</button>
          </div>
        </div>
      </div>
    </div>
    <pre>
&lt;div class="card-inner"&gt; ... &lt;/div&gt;
    </pre>
  </div>

  <!-- 5. Forms -->
  <div class="card">
    <h2>Forms</h2>
    <form class="form-column">
      <div class="form-control">
        <label class="label"><span class="label-text">Name</span></label>
        <input type="text" placeholder="Your name" class="input input-bordered" />
      </div>
      <div class="form-control">
        <label class="label"><span class="label-text">Email</span></label>
        <input type="email" placeholder="Email" class="input input-bordered" />
      </div>
      <div class="form-control">
        <label class="label cursor-pointer">
          <span class="label-text">Subscribe</span>
          <input type="checkbox" class="checkbox checkbox-primary" />
        </label>
      </div>
      <button type="submit" class="btn btn-primary">Submit</button>
    </form>
    <pre>
&lt;input type="text" class="input input-bordered" /&gt;
&lt;input type="email" class="input input-bordered" /&gt;
&lt;input type="checkbox" class="checkbox checkbox-primary" /&gt;
&lt;button class="btn btn-primary"&gt;Submit&lt;/button&gt;
    </pre>
  </div>

  <!-- 6. Table -->
  <div class="card">
    <h2>Table</h2>
    <div class="overflow-x-auto">
      <table class="table table-zebra w-full">
        <thead>
          <tr>
            <th>Name</th>
            <th>Email</th>
            <th>Status</th>
          </tr>
        </thead>
        <tbody>
          <tr>
            <td>John</td>
            <td>john@example.com</td>
            <td><span class="badge badge-success">Active</span></td>
          </tr>
          <tr>
            <td>Mary</td>
            <td>mary@example.com</td>
            <td><span class="badge badge-warning">Pending</span></td>
          </tr>
        </tbody>
      </table>
    </div>
    <pre>
&lt;table class="table table-zebra w-full"&gt; ... &lt;/table&gt;
    </pre>
  </div>

  <!-- 7. Modal -->
  <div class="card">
    <h2>Modal</h2>
    <label for="my-modal" class="btn btn-primary">Open Modal</label>
    <input type="checkbox" id="my-modal" class="modal-toggle" />
    <div class="modal">
      <div class="modal-box">
        <h3 class="font-bold text-lg">Modal Title</h3>
        <p class="py-4">This is a simple daisyUI modal demonstration.</p>
        <div class="modal-action">
          <label for="my-modal" class="btn">Close</label>
        </div>
      </div>
    </div>
    <pre>
&lt;label for="my-modal" class="btn btn-primary"&gt;Open Modal&lt;/label&gt;
&lt;input type="checkbox" id="my-modal" class="modal-toggle" /&gt;
&lt;div class="modal"&gt; ... &lt;/div&gt;
    </pre>
  </div>

  <!-- 8. Navbar -->
  <div class="card">
    <h2>Navbar</h2>
    <div class="navbar bg-base-200 rounded-box w-full px-0">
      <div class="flex-1">
        <a class="btn btn-ghost normal-case text-xl">Brand</a>
      </div>
      <div class="flex-none">
        <ul class="menu menu-horizontal p-0">
          <li><a>Home</a></li>
          <li><a>About</a></li>
          <li><a>Contact</a></li>
        </ul>
      </div>
    </div>
    <pre>
&lt;div class="navbar bg-base-200 rounded-box"&gt; ... &lt;/div&gt;
    </pre>
  </div>

<!-- 9. Progress -->
<div class="card">
  <h2>Progress</h2>
  <div class="space-y-2 w-full max-w-md">
    <progress class="progress progress-primary w-full" value="70" max="100"></progress>
    <progress class="progress progress-secondary w-full" value="45" max="100"></progress>
    <progress class="progress progress-accent w-full" value="25" max="100"></progress>
  </div>
  <pre>
&lt;progress class="progress progress-primary" value="70" max="100"&gt;&lt;/progress&gt;
&lt;progress class="progress progress-secondary" value="45" max="100"&gt;&lt;/progress&gt;
&lt;progress class="progress progress-accent" value="25" max="100"&gt;&lt;/progress&gt;
  </pre>
</div>

<!-- 10. Steps -->
<div class="card">
  <h2>Steps</h2>
  <div class="steps w-full max-w-md">
    <div class="step step-primary">Step 1</div>
    <div class="step step-primary">Step 2</div>
    <div class="step">Step 3</div>
  </div>
  <pre>
&lt;div class="steps"&gt;
  &lt;div class="step step-primary"&gt;Step 1&lt;/div&gt;
  &lt;div class="step step-primary"&gt;Step 2&lt;/div&gt;
  &lt;div class="step"&gt;Step 3&lt;/div&gt;
&lt;/div&gt;
  </pre>
</div>

<!-- 11. Tabs -->
<div class="card">
  <h2>Tabs</h2>
  <div class="tabs w-full max-w-md">
    <a class="tab tab-active">Tab 1</a>
    <a class="tab">Tab 2</a>
    <a class="tab">Tab 3</a>
  </div>
  <pre>
&lt;div class="tabs"&gt;
  &lt;a class="tab tab-active"&gt;Tab 1&lt;/a&gt;
  &lt;a class="tab"&gt;Tab 2&lt;/a&gt;
  &lt;a class="tab"&gt;Tab 3&lt;/a&gt;
&lt;/div&gt;
  </pre>
</div>

<!-- 12. Tooltips -->
<div class="card">
  <h2>Tooltips</h2>
  <div class="flex justify-center gap-4">
    <button class="btn btn-primary tooltip" data-tip="Primary tooltip">Primary</button>
    <button class="btn btn-secondary tooltip" data-tip="Secondary tooltip">Secondary</button>
    <button class="btn btn-accent tooltip" data-tip="Accent tooltip">Accent</button>
  </div>
  <pre>
&lt;button class="btn btn-primary tooltip" data-tip="Primary tooltip"&gt;Primary&lt;/button&gt;
&lt;button class="btn btn-secondary tooltip" data-tip="Secondary tooltip"&gt;Secondary&lt;/button&gt;
&lt;button class="btn btn-accent tooltip" data-tip="Accent tooltip"&gt;Accent&lt;/button&gt;
  </pre>
</div>

<!-- 13. Avatars -->
<div class="card">
  <h2>Avatars</h2>
  <div class="flex justify-center gap-4">
    <div class="avatar">
      <div class="w-16 rounded">
        <img src="https://i.pravatar.cc/100?img=1" alt="Avatar 1"/>
      </div>
    </div>
    <div class="avatar">
      <div class="w-16 rounded-full">
        <img src="https://i.pravatar.cc/100?img=2" alt="Avatar 2"/>
      </div>
    </div>
    <div class="avatar placeholder">
      <div class="bg-neutral-focus text-neutral-content rounded-full w-16">
        <span>JS</span>
      </div>
    </div>
  </div>
  <pre>
&lt;div class="avatar"&gt;&lt;div class="w-16 rounded"&gt;&lt;img src="..." /&gt;&lt;/div&gt;&lt;/div&gt;
&lt;div class="avatar"&gt;&lt;div class="w-16 rounded-full"&gt;&lt;img src="..." /&gt;&lt;/div&gt;&lt;/div&gt;
&lt;div class="avatar placeholder"&gt;&lt;div class="bg-neutral-focus text-neutral-content rounded-full w-16"&gt;&lt;span&gt;JS&lt;/span&gt;&lt;/div&gt;&lt;/div&gt;
  </pre>
</div>


</section>

<style>
.card-container {
  display: flex;
  flex-wrap: wrap;
  justify-content: center;
  gap: 1rem;
  padding: 1rem;
}

.card {
  flex: 1 1 300px;
  max-width: 600px;
  padding: 2rem;
  border-radius: 0.5rem;
  border: 2px solid var(--color-base-content);
  background-color: var(--color-base-100);
  box-shadow: 0 4px 6px rgba(0,0,0,0.2);
  text-align: center;
  display: flex;
  flex-direction: column;
  align-items: center;
  gap: 1rem;
  height: auto;
  box-sizing: border-box;
}

.button-row {
  display: flex;
  flex-wrap: wrap;
  justify-content: center;
  gap: 0.5rem;
}

.alert-column {
  display: flex;
  flex-direction: column;
  align-items: center;
  gap: 0.5rem;
}

.badge-row {
  display: flex;
  flex-wrap: wrap;
  justify-content: center;
  gap: 0.5rem;
}

.card-grid {
  display: grid;
  grid-template-columns: repeat(auto-fill, minmax(250px, 1fr));
  gap: 1rem;
  justify-items: center;
  width: 100%;
}

.card-inner {
  background-color: var(--color-base-300);
  box-shadow: 0 4px 6px rgba(0,0,0,0.2);
  border-radius: 0.5rem;
  padding: 1rem;
  width: 100%;
  display: flex;
  flex-direction: column;
  gap: 0.5rem;
}

.form-column {
  display: flex;
  flex-direction: column;
  gap: 1rem;
  width: 100%;
}

.card pre {
  display: block;
  background-color: var(--color-base-200);
  padding: 1rem;
  border-radius: 0.5rem;
  overflow-x: auto;
  white-space: pre-wrap;
  word-break: break-word;
  text-align: left;
  width: 100%;
}
</style>
